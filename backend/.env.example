# Backend Service Environment Variables

# Service Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
SERVICE_NAME=afl-backend

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/afl_dev

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Authentication
JWT_ACCESS_SECRET=your-access-secret
JWT_REFRESH_SECRET=your-refresh-secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# External APIs
SQUIGGLE_API_KEY=
AFL_TABLES_API_KEY=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1m

# Logging
LOG_LEVEL=debug